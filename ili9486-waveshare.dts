/*
 * Device Tree Overlay for ILI9486 3.5" TFT Display + XPT2046 Touch
 * Target: Orange Pi Zero 2W (Allwinner H618)
 *
 * Display: 480x320 SPI TFT with ILI9486 controller
 * Touch: XPT2046 resistive touchscreen controller
 * Connection: SPI1, Display CS=PH8(CS0), Touch CS=PH9(CS1)
 *             Reset=PI6, DC=PH4, Touch IRQ=PH2
 */
/dts-v1/;
/plugin/;

/ {
    compatible = "allwinner,sun50i-h616";

    fragment@0 {
        target = <&spi1>;
        __overlay__ {
            status = "okay";
            #address-cells = <1>;
            #size-cells = <0>;
            pinctrl-names = "default";
            pinctrl-0 = <&spi1_pins>, <&spi1_cs0_pin>, <&spi1_cs1_pin>;

            display@0 {
                compatible = "fbtft,fb_ili9486";
                reg = <0>;
                spi-max-frequency = <16000000>;
                rotate = <90>;
                bgr;
                fps = <30>;
                buswidth = <8>;
                regwidth = <16>;
                reset-gpios = <&pio 8 6 1>;  /* PI6 - active low */
                dc-gpios = <&pio 7 4 0>;     /* PH4 - active high */
                debug = <0>;
                /* Waveshare 3.5" ILI9486 initialization sequence */
                init = <0x10000f1 0x36 0x04 0x00 0x3c 0x0f 0x8f
                        0x10000f2 0x18 0xa3 0x12 0x02 0xb2 0x12 0xff 0x10 0x00
                        0x10000f8 0x21 0x04
                        0x10000f9 0x00 0x08
                        0x1000036 0x08
                        0x10000b4 0x00
                        0x10000c1 0x41
                        0x10000c5 0x00 0x91 0x80 0x00
                        0x10000e0 0x0f 0x1f 0x1c 0x0c 0x0f 0x08 0x48 0x98 0x37 0x0a 0x13 0x04 0x11 0x0d 0x00
                        0x10000e1 0x0f 0x32 0x2e 0x0b 0x0d 0x05 0x47 0x75 0x37 0x06 0x10 0x03 0x24 0x20 0x00
                        0x100003a 0x55
                        0x1000011
                        0x2000078
                        0x1000029>;
            };

            touchscreen@1 {
                compatible = "ti,ads7846";
                reg = <1>;
                spi-max-frequency = <2000000>;
                interrupts-extended = <&pio 7 2 2>;  /* PH2, IRQ_TYPE_EDGE_FALLING */
                pendown-gpio = <&pio 7 2 1>;         /* PH2 - GPIO 226, active low */
                ti,x-plate-ohms = /bits/ 16 <60>;
                ti,pressure-max = /bits/ 16 <255>;
                ti,x-min = /bits/ 16 <0>;
                ti,x-max = /bits/ 16 <4095>;
                ti,y-min = /bits/ 16 <0>;
                ti,y-max = /bits/ 16 <4095>;
                wakeup-source;
            };
        };
    };
};
